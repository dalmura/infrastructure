{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["helm"],
      "matchDatasources": ["docker"],
      "enabled": false
    }
  ],
  "enabledManagers": ["helm-values", "kustomize", "argocd", "custom.regex"],
  "helm-values": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/values/*/values.yaml"
    ],
    "ignorePaths": [
      "sites/indigo/clusters/*/*/app/**"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/overlays/*/kustomization.yaml"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/app/templates/*.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "sites/indigo/clusters/dal-indigo-core-1/wave-2/values/traefik-public/values.yaml"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\n\\s+version:\\s*(?<currentValue>.*)"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
