{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "enabledManagers": [
    "argocd",
    "helm-values",
    "kubernetes",
    "kustomize",
    "custom.regex"
  ],
  "argocd": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/app/templates/*.yaml"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/values/*/values.yaml"
    ],
    "ignorePaths": [
      "sites/indigo/clusters/*/*/app/**"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/overlays/*/deployment.yaml"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/overlays/*/kustomization.yaml"
    ],
    "ignorePaths": [
      "sites/archived/**"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "sites/indigo/clusters/dal-indigo-core-1/wave-2/values/traefik-public/values.yaml"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\n\\s+version:\\s*(?<currentValue>.*)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["photoprism/photoprism"],
      "versioning": "regex:^(?<major>\\d{2})(?<minor>\\d{2})(?<patch>\\d{2})$"
    }
  ]
}
