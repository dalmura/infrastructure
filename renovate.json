{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["helm-values", "kustomize", "argocd"],
  "helm-values": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/values/*/values.yaml"
    ],
    "ignorePaths": [
      "sites/indigo/clusters/*/*/app/**"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/overlays/*/kustomization.yaml"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "sites/indigo/clusters/*/*/app/templates/*.yaml"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "sites/indigo/clusters/dal-indigo-core-1/wave-2/values/traefik-public/values.yaml"
      ],
      "matchStrings": [
        "moduleName:\\s*github\\.com/(?<depName>[^\\s]+)\\s+version:\\s*(?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
